---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { Image } from "astro:assets";
import storyImg from "../assets/images/contact-bg.png"; // Reusing for texture
import { teamMembers } from "../data/team";
import { aboutPage } from "../data/about";
---

<Layout title="About Us">
    <Header slot="header" />

    <main class="about-page">
        <section class="page-header section-padding fade-in-up">
            <div class="container">
                <h1>Our Story</h1>
                <p class="subtitle">Cultivating beauty, one stem at a time.</p>
            </div>
        </section>

        <section class="about-content container">
            <div class="content-grid fade-in-up delay-100">
                <div class="text-block">
                    <h2>{aboutPage.sectionTitle}</h2>
                    {aboutPage.story.map((paragraph) => <p>{paragraph}</p>)}

                    <div class="owner-quote">
                        <blockquote>
                            "{aboutPage.quote}"
                        </blockquote>
                        <cite>â€” {aboutPage.owner}</cite>
                    </div>
                </div>
                <div class="image-block hover-scale">
                    <Image
                        src={storyImg}
                        alt="Dried flowers flatlay"
                        class="story-img"
                    />
                </div>
            </div>
        </section>

        <section class="team-section section-padding">
            <div class="container">
                <div class="section-header fade-in-up">
                    <h2>Meet the Team</h2>
                </div>
                <div class="team-grid">
                    {
                        teamMembers.map((member, index) => (
                            <div
                                class={`team-member fade-in-up delay-${(index + 1) * 100}`}
                            >
                                <div class="member-img-wrapper">
                                    <Image
                                        src={member.image}
                                        alt={`${member.name} - ${member.role}`}
                                        class="circle-img"
                                    />
                                </div>
                                <h3>{member.name}</h3>
                                <p class="role">{member.role}</p>
                            </div>
                        ))
                    }
                </div>
            </div>
        </section>
    </main>

    <Footer slot="footer" />
</Layout>

<script>
    // Intersection Observer
    const observerOptions = { root: null, threshold: 0.1 };
    const observer = new IntersectionObserver((entries, observer) => {
        entries.forEach((entry) => {
            if (entry.isIntersecting) {
                entry.target.classList.add("visible");
                observer.unobserve(entry.target);
            }
        });
    }, observerOptions);

    document
        .querySelectorAll(".fade-in-up")
        .forEach((el) => observer.observe(el));
</script>

<style>
    .section-padding {
        padding: var(--spacing-lg) 0;
    }

    .page-header {
        background-color: var(--color-surface);
        text-align: center;
        padding-bottom: var(--spacing-xl);
    }

    .page-header h1 {
        font-size: var(--font-size-4xl);
        margin-bottom: var(--spacing-xs);
    }

    .subtitle {
        font-size: var(--font-size-xl);
        color: var(--color-secondary);
        font-family: var(--font-family-heading);
        font-style: italic;
    }

    .content-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: var(--spacing-xl);
        margin-top: -3rem; /* Overlap effect */
        background-color: var(--color-background);
        padding: var(--spacing-lg);
        box-shadow: var(--shadow-sm);
        align-items: center;
        border-radius: var(--radius-lg);
    }

    .story-img {
        border-radius: var(--radius-md);
        height: 100%;
        object-fit: cover;
    }

    .owner-quote {
        margin-top: var(--spacing-lg);
        padding-left: var(--spacing-md);
        border-left: 2px solid var(--color-accent);
    }

    .owner-quote blockquote {
        font-family: var(--font-family-heading);
        font-size: var(--font-size-lg);
        font-style: italic;
        color: var(--color-primary);
        margin-bottom: var(--spacing-xs);
    }

    .owner-quote cite {
        display: block;
        font-size: var(--font-size-sm);
        color: var(--color-secondary);
        font-weight: 600;
    }

    .team-section {
        text-align: center;
    }

    .team-grid {
        display: flex;
        justify-content: center;
        gap: var(--spacing-lg);
        flex-wrap: wrap;
    }

    .member-img-wrapper {
        width: 200px;
        height: 200px;
        margin: 0 auto var(--spacing-sm);
        border-radius: 50%;
        overflow: hidden;
        border: 3px solid var(--color-surface);
        box-shadow: var(--shadow-md);
        transition: transform 0.3s ease;
    }

    .member-img-wrapper:hover {
        transform: scale(1.05);
    }

    .circle-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .team-member h3 {
        margin-bottom: 0;
    }

    .team-member .role {
        color: var(--color-text-muted);
        font-size: var(--font-size-sm);
        text-transform: uppercase;
        letter-spacing: 0.1em;
    }

    @media (max-width: 768px) {
        .content-grid {
            grid-template-columns: 1fr;
            margin-top: 0;
            box-shadow: none;
            padding: var(--spacing-md) 0;
        }
    }
</style>

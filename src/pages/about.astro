---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { Image } from "astro:assets";
import aboutFloristHands from "../assets/images/about_florist_hands_earthy.png";
import { teamMembers } from "../data/team";
import { aboutPage } from "../data/about";
---

<Layout title="About Us">
    <Header slot="header" />

    <main class="about-page">
        <section class="page-header section-padding fade-in-up">
            <div class="container">
                <h1>Our Story</h1>

                <p
                    class="subtitle font-heading"
                    style="font-size: 1.6rem; font-style: italic;"
                >
                    Cultivating beauty, one stem at a time.
                </p>
            </div>
        </section>

        <section class="about-content container">
            <div class="content-grid fade-in-up delay-100">
                <div class="text-block">
                    <h2>{aboutPage.sectionTitle}</h2>

                    {
                        aboutPage.story.map((paragraph) => (
                            <p style="font-size: 1.2rem; line-height: 1.6;">
                                {paragraph}
                            </p>
                        ))
                    }

                    <cite>
                        â€” {aboutPage.owner}

                        <style>
                            cite {
                                font-family: var(--font-family-script);
                                color: var(--color-secondary);
                                font-style: normal;
                                font-size: 2rem;
                                display: block;
                                margin-top: 1.6rem;
                            }
                        </style>
                    </cite>
                </div>
                <!-- Removed boxy container, letting image breathe -->
                <div class="image-block">
                    <Image
                        src={aboutFloristHands}
                        alt="Florist hands arranging flowers"
                        class="story-img organic-shape"
                    />
                </div>
            </div>
        </section>

        <section class="team-section section-padding">
            <div class="container">
                <div class="section-header fade-in-up">
                    <h2>Meet the Team</h2>
                </div>
                <div class="team-grid">
                    {
                        teamMembers.map((member, index) => (
                            <div
                                class={`team-member fade-in-up delay-${(index + 1) * 100}`}
                            >
                                <div class="member-img-wrapper">
                                    <Image
                                        src={member.image}
                                        alt={`${member.name} - ${member.role}`}
                                        class="circle-img"
                                    />
                                </div>
                                <h3>{member.name}</h3>
                                <p class="role">{member.role}</p>
                            </div>
                        ))
                    }
                </div>
            </div>
        </section>
    </main>

    <Footer slot="footer" />
</Layout>

<script>
    // Intersection Observer
    const observerOptions = { root: null, threshold: 0.1 };
    const observer = new IntersectionObserver((entries, observer) => {
        entries.forEach((entry) => {
            if (entry.isIntersecting) {
                entry.target.classList.add("visible");
                observer.unobserve(entry.target);
            }
        });
    }, observerOptions);

    document
        .querySelectorAll(".fade-in-up")
        .forEach((el) => observer.observe(el));
</script>

<style>
    .section-padding {
        padding: var(--spacing-lg) 0;
    }

    .page-header {
        background-color: var(--color-surface);
        text-align: center;
        padding-bottom: var(--spacing-xl);
    }

    .page-header h1 {
        font-family: var(--font-family-script);
        font-size: var(--font-size-6xl);
        margin-bottom: var(--spacing-xs);
        line-height: 2.3;
    }

    .subtitle {
        font-size: 1.5rem;
        color: var(--color-secondary);
        font-family: var(--font-family-heading);
        font-style: normal;
        line-height: 1.2;
    }

    .content-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: var(--spacing-xl);
        align-items: center;
        /* Removed background and shadow for cleaner look */
        padding: var(--spacing-lg) 0;
    }

    .text-block h2 {
        font-family: var(--font-family-script);
        font-size: 2.25rem;
        margin-bottom: var(--spacing-sm);
        color: var(--color-primary);
        line-height: 1.8;
    }

    .story-img {
        width: 100%;
        height: auto;
        object-fit: cover;
    }

    .organic-shape {
        border-radius: var(--radius-lg) 0 var(--radius-lg) 0;
        box-shadow: var(--shadow-lg);
    }

    .owner-quote {
        margin-top: var(--spacing-lg);
        padding-left: var(--spacing-md);
        border-left: 2px solid var(--color-accent);
    }

    .owner-quote blockquote {
        font-family: var(--font-family-heading);
        font-size: var(--font-size-xl);
        font-style: italic;
        color: var(--color-primary);
        margin-bottom: var(--spacing-xs);
    }

    .owner-quote cite {
        display: block;
        font-family: var(--font-family-script);
        font-size: 2.25rem; /* 2x larger */
        color: var(--color-secondary); /* Matches theme (terra cotta) */
        font-weight: normal;
        margin-top: var(--spacing-sm);
        text-align: center;
        line-height: 1.1; /* Tighter line height for script */
    }

    .owner-label {
        display: block; /* Forces new line */
        font-size: 1rem;
        font-family: var(--font-family-body);
        color: var(--color-text-muted);
        margin-top: 0.25rem; /* Adjust spacing here */
        font-style: normal;
    }

    .team-section {
        text-align: center;
    }

    .team-grid {
        display: flex;
        justify-content: center;
        gap: var(--spacing-lg);
        flex-wrap: wrap;
    }

    .member-img-wrapper {
        width: 200px;
        height: 200px;
        margin: 0 auto var(--spacing-sm);
        border-radius: 50%;
        overflow: hidden;
        border: 3px solid var(--color-surface);
        box-shadow: var(--shadow-md);
        transition: transform 0.3s ease;
    }

    .member-img-wrapper:hover {
        transform: scale(1.05);
    }

    .circle-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .team-member h3 {
        margin-bottom: 0;
    }

    .team-member .role {
        color: var(--color-text-muted);
        font-size: var(--font-size-sm);
        text-transform: uppercase;
        letter-spacing: 0.1em;
    }

    @media (max-width: 768px) {
        .content-grid {
            grid-template-columns: 1fr;
            margin-top: 0;
            box-shadow: none;
            padding: var(--spacing-md) 0;
        }
    }
</style>

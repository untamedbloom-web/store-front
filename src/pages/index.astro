---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { Image } from "astro:assets";
import heroBg from "../assets/images/hero-bg.png";
import heroBgWildflowers from "../assets/images/hero-bg-wildflowers.png";
import introWildflowersInteractive from "../assets/images/intro-wildflowers-interactive.png";
import { services } from "../data/services";
import { homePage } from "../data/home";
---

<Layout title="Home">
	<Header slot="header" />

	<section class="hero">
		<div class="hero-image">
			<Image
				src={heroBgWildflowers}
				alt="Vibrant, dynamic Colorado wildflowers at golden hour"
				class="hero-bg-img"
			/>
		</div>
		<div class="hero-content container fade-in-up">
			<h1 set:html={homePage.hero.title} />
			<p set:html={homePage.hero.subtitle} />
			<a href={homePage.hero.ctaLink} class="btn btn-primary"
				>{homePage.hero.ctaText}</a
			>
		</div>
	</section>

	<section class="intro container section-padding">
		<div class="intro-text fade-in-up delay-100">
			<h2>{homePage.intro.title}</h2>
			<p>{homePage.intro.description}</p>
			<a href={homePage.intro.linkUrl} class="text-link"
				>{homePage.intro.linkText}</a
			>
		</div>
		<div class="intro-image fade-in-up delay-200">
			<Image
				src={introWildflowersInteractive}
				alt="Immersive Colorado wildflower garden path"
				class="rounded-img"
			/>
		</div>
	</section>

	<section class="featured-services section-padding">
		<div class="container">
			<div class="section-header fade-in-up">
				<h2>{homePage.featuredServices.title}</h2>
				<p>{homePage.featuredServices.subtitle}</p>
			</div>

			<div class="services-grid">
				{
					services.map((service, index) => (
						<a
							href="/services"
							class={`service-card fade-in-up delay-${(index + 1) * 100}`}
						>
							<div class="card-img-wrapper hover-scale">
								<Image
									src={service.image}
									alt={service.title}
								/>
							</div>
							<h3>{service.title}</h3>
							<p>{service.shortDescription}</p>
						</a>
					))
				}
			</div>
		</div>
	</section>

	<Footer slot="footer" />
</Layout>

<style>
	/* Hero Section */
	.hero {
		position: relative;
		height: 85vh; /* Slightly taller */
		display: flex;
		align-items: center;
		background-color: var(--color-surface);
		overflow: hidden;
	}

	.hero-image {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: 0;
	}

	.hero-bg-img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		/* filter: brightness(0.7); Removed to show true colors of negative space */
	}

	.hero-content {
		position: relative;
		z-index: 1;
		max-width: 700px;
		padding: var(--spacing-md);
		color: var(
			--color-primary
		); /* Changed to dark green for contrast against light negative space */
		text-align: center;
	}

	.hero h1 {
		font-family: "Birthstone Bounce", cursive;
		font-size: 7.5rem; /* Increased to 1.5x */
		color: var(--color-primary);
		margin-bottom: var(--spacing-sm);
		/* Subtle white halo for readability */
		text-shadow:
			2px 2px 4px rgba(255, 255, 255, 0.8),
			-2px -2px 4px rgba(255, 255, 255, 0.8);
		line-height: 1.1;
	}

	.hero p {
		font-family: "Allison", cursive;
		font-size: 3.5rem; /* Increased for Allison script readability */
		margin-bottom: var(--spacing-md);
		text-shadow: 1px 1px 2px rgba(255, 255, 255, 0.8);
		line-height: 1.2;
	}

	/* Buttons */
	.btn {
		display: inline-block;
		padding: 14px 28px;
		text-transform: uppercase;
		letter-spacing: 0.1em;
		font-weight: 600;
		text-align: center;
		transition: var(--transition);
		border-radius: var(--radius-sm);
	}

	.btn-primary {
		background-color: var(--color-primary);
		color: white;
		border: 1px solid transparent;
	}

	.btn-primary:hover {
		background-color: transparent;
		border-color: white;
	}

	/* Intro Section */
	.section-padding {
		padding: var(--spacing-xl) 0;
	}

	.intro {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: var(--spacing-lg);
		align-items: center;
	}

	.intro-text h2 {
		font-family: "Birthstone Bounce", cursive;
		font-size: 4.5rem; /* Increased to 1.5x (from 3rem) */
		margin-bottom: var(--spacing-sm);
	}

	.rounded-img {
		border-radius: var(--radius-md);
		box-shadow: var(--shadow-lg);
	}

	.text-link {
		display: inline-block;
		margin-top: var(--spacing-sm);
		font-weight: 600;
		border-bottom: 1px solid var(--color-primary);
	}

	/* Services Section */
	.featured-services {
		background-color: var(--color-surface);
	}

	.section-header {
		text-align: center;
		margin-bottom: var(--spacing-lg);
	}

	.section-header h2 {
		font-family: "Birthstone Bounce", cursive;
		font-size: 5rem;
	}

	.services-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: var(--spacing-md);
	}

	.service-card {
		background-color: var(--color-background);
		padding: var(--spacing-md);
		text-align: center;
		box-shadow: var(--shadow-sm);
		transition: var(--transition);
		display: block; /* Make anchor block */
		border-radius: var(--radius-md);
	}

	.service-card:hover {
		transform: translateY(-5px);
		box-shadow: var(--shadow-md);
	}

	.card-img-wrapper {
		overflow: hidden;
		margin-bottom: var(--spacing-sm);
		border-radius: var(--radius-sm);
	}

	.card-img-wrapper img {
		transition: transform 0.5s ease;
	}

	.service-card:hover .card-img-wrapper img {
		transform: scale(1.05); /* Zoom effect */
	}

	.service-card h3 {
		font-size: var(--font-size-xl);
		margin-bottom: var(--spacing-xs);
		color: var(--color-primary);
	}

	.service-card p {
		color: var(--color-text-main);
	}

	/* Responsive */
	@media (max-width: 768px) {
		.hero h1 {
			font-size: 3.5rem; /* Scaled for mobile */
		}

		.intro {
			grid-template-columns: 1fr;
			gap: var(--spacing-md);
			text-align: center;
		}

		.section-padding {
			padding: var(--spacing-lg) 0;
		}
	}
</style>

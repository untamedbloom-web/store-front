---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { Image } from "astro:assets";
import heroBgMoody from "../assets/images/hero_wildflowers_moody.png";
import introFloristHands from "../assets/images/about_florist_hands_earthy.png";
import logo from "../assets/images/logo.svg";
import { services } from "../data/services";
import { homePage } from "../data/home";
---

<Layout title="Home">
	<Header slot="header" />

	<section class="hero inverse-nav">
		<div class="hero-image">
			<Image
				src={heroBgMoody}
				alt="Untamed English cottage garden at golden hour"
				class="hero-bg-img"
			/>
			<div class="hero-overlay"></div>
		</div>
		<div class="hero-content container fade-in-up">
			<Image src={logo} alt="Untamed Blooms Co." class="hero-logo" />
			<p class="subtitle">Fiercely Free Floral Design</p>
			<a href={homePage.hero.ctaLink} class="btn btn-primary"
				>{homePage.hero.ctaText}</a
			>
		</div>
	</section>

	<section class="intro container section-padding">
		<div class="intro-grid">
			<div class="intro-image fade-in-up">
				<Image
					src={introFloristHands}
					alt="Florist arranging wild flowers"
					class="organic-img"
				/>
			</div>
			<div class="intro-text fade-in-up delay-100">
				<h2>{homePage.intro.title}</h2>
				<p>{homePage.intro.description}</p>
				<a href={homePage.intro.linkUrl} class="text-link"
					>{homePage.intro.linkText}</a
				>
			</div>
		</div>
	</section>

	<section class="featured-services section-padding">
		<div class="container">
			<div class="section-header fade-in-up">
				<h2>{homePage.featuredServices.title}</h2>
				<p>{homePage.featuredServices.subtitle}</p>
			</div>

			<div class="services-grid">
				{
					services.map((service, index) => (
						<a
							href="/services"
							class={`service-card fade-in-up delay-${(index + 1) * 100}`}
						>
							<div class="card-img-wrapper hover-scale">
								<Image
									src={service.image}
									alt={service.title}
								/>
							</div>
							<h3>{service.title}</h3>
							<p>{service.shortDescription}</p>
						</a>
					))
				}
			</div>
		</div>
	</section>

	<Footer slot="footer" />
</Layout>

<style>
	/* Hero Section */
	/* Hero Section */
	.hero {
		position: relative;
		height: 90vh;
		display: flex;
		align-items: center;
		justify-content: center;
		background-color: var(--color-surface);
		overflow: hidden;
	}

	.hero-image {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: 0;
	}

	.hero-bg-img {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.hero-overlay {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: linear-gradient(
			to bottom,
			rgba(0, 0, 0, 0.3),
			rgba(0, 0, 0, 0.1)
		);
	}

	.hero-content {
		position: relative;
		z-index: 1;
		max-width: 900px;
		padding: var(--spacing-md);
		color: white; /* Ensure visibility over image */
		text-align: center;
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	.hero-logo {
		width: 100%;
		max-width: 600px; /* Approximate width of previous 5rem text */
		height: auto;
		margin-bottom: 0; /* Removed margin to bring subtitle closer */
		filter: brightness(0) invert(1);
	}

	.hero .subtitle {
		font-family: var(--font-family-heading);
		text-transform: uppercase;
		letter-spacing: 0.2em;
		font-weight: 500;
		font-size: 1.2rem;
		margin-top: var(--spacing-xs);
		margin-bottom: var(--spacing-lg);
		color: rgba(255, 255, 255, 0.9);
	}

	/* Buttons - Ensure visibility on dark bg */
	.btn-primary {
		background-color: var(--color-brand-red); /* Pop of color */
		color: white;
		border: 1px solid transparent;
	}

	.btn-primary:hover {
		background-color: transparent;
		border-color: white;
	}

	/* Intro Section */
	.section-padding {
		padding: var(--spacing-xl) 0;
	}

	.intro-grid {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: var(--spacing-xl);
		align-items: center;
	}

	.intro-text {
		padding: var(--spacing-md);
	}

	.intro-text h2 {
		font-family: var(--font-family-script); /* Changed to Le Jour Script */
		font-size: 4rem; /* Increased size for script font */
		margin-bottom: var(--spacing-sm);
		color: var(--color-primary);
		line-height: 1.8;
	}

	.organic-img {
		border-radius: var(--radius-lg) 0 var(--radius-lg) 0;
		box-shadow: var(--shadow-lg);
		width: 100%;
		height: auto;
		object-fit: cover;
	}

	/* Buttons */
	.btn {
		display: inline-block;
		padding: 14px 28px;
		text-transform: uppercase;
		letter-spacing: 0.1em;
		font-weight: 600;
		text-align: center;
		transition: var(--transition);
		border-radius: var(--radius-sm);
	}

	.btn-primary {
		background-color: var(--color-primary);
		color: white;
		border: 1px solid transparent;
	}

	.btn-primary:hover {
		background-color: transparent;
		border-color: white;
	}

	/* Intro Section */
	.intro {
		display: block; /* Force block to override any grid */
		/* Handled by .intro-grid */
	}

	.text-link {
		display: inline-block;
		margin-top: var(--spacing-sm);
		font-weight: 600;
		color: var(--color-secondary);
		border-bottom: 2px solid var(--color-secondary);
	}

	/* Services Section */
	.featured-services {
		background-color: var(--color-surface);
	}

	.section-header {
		text-align: center;
		margin-bottom: var(--spacing-lg);
	}

	.section-header h2 {
		font-family: var(--font-family-script);
		font-size: var(--font-size-3xl);
	}

	.services-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: var(--spacing-md);
	}

	.service-card {
		background-color: var(--color-background);
		padding: var(--spacing-md);
		text-align: center;
		box-shadow: var(--shadow-sm);
		transition: var(--transition);
		display: block; /* Make anchor block */
		border-radius: var(--radius-md);
	}

	.service-card:hover {
		transform: translateY(-5px);
		box-shadow: var(--shadow-md);
	}

	.card-img-wrapper {
		overflow: hidden;
		margin-bottom: var(--spacing-sm);
		border-radius: var(--radius-sm);
	}

	.card-img-wrapper img {
		transition: transform 0.5s ease;
	}

	.service-card:hover .card-img-wrapper img {
		transform: scale(1.05); /* Zoom effect */
	}

	.service-card h3 {
		font-size: var(--font-size-xl);
		margin-bottom: var(--spacing-xs);
		color: var(--color-primary);
	}

	.service-card p {
		color: var(--color-text-main);
	}

	/* Responsive */
	@media (max-width: 768px) {
		.hero h1 {
			font-size: 2.5rem; /* Scaled for mobile */
		}

		.intro-grid {
			grid-template-columns: 1fr;
			gap: var(--spacing-md);
			text-align: center;
		}

		.section-padding {
			padding: var(--spacing-lg) 0;
		}
	}
</style>

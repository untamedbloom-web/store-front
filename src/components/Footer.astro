---
import { siteInfo } from "../data/site";
import { Image } from "astro:assets";
import logo from "../assets/images/logo.svg";
const currentYear = new Date().getFullYear();
---

<footer class="site-footer">
    <!-- Newsletter Section - Centered Top -->
    <div class="newsletter-section section-padding">
        <div class="container text-center">
            <h4>Stay in Bloom</h4>
            <p>Subscribe for seasonal updates and floral inspiration.</p>
            <form class="newsletter-form" onsubmit="event.preventDefault();">
                <input
                    type="email"
                    placeholder="Your email address"
                    aria-label="Email Address"
                />
                <button type="submit">Subscribe</button>
            </form>
        </div>
    </div>

    <!-- Main Footer Content -->
    <div class="footer-main">
        <div class="container footer-grid">
            <!-- Column 1: Brand -->
            <div class="footer-brand">
                <a href="/" class="footer-logo">
                    <Image
                        src={logo}
                        alt={siteInfo.name}
                        class="footer-logo-img"
                    />
                </a>
                <p class="brand-description">
                    {siteInfo.description}
                </p>
                <div class="social-links">
                    <a
                        href={siteInfo.social.instagram}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="social-icon"
                        aria-label="Instagram"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            ><rect
                                x="2"
                                y="2"
                                width="20"
                                height="20"
                                rx="5"
                                ry="5"></rect><path
                                d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"
                            ></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"
                            ></line></svg
                        >
                    </a>
                    <a
                        href={siteInfo.social.whatsapp}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="social-icon"
                        aria-label="WhatsApp"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            ><path
                                d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"
                            ></path></svg
                        >
                    </a>
                </div>
            </div>

            <!-- Column 2: Explore -->
            <div class="footer-links">
                <h4>Explore</h4>
                <ul>
                    <li><a href="/about">Our Story</a></li>
                    <li><a href="/gallery">Portfolio</a></li>
                    <li><a href="/sourcing">Sourcing</a></li>
                    <li><a href="/services">Services</a></li>
                </ul>
            </div>

            <!-- Column 3: Support -->
            <div class="footer-links">
                <h4>Support</h4>
                <ul>
                    <li><a href="/contact">Contact</a></li>
                    <li><a href="/privacy">Privacy Policy</a></li>
                    <li><a href="/terms">Terms of Service</a></li>
                </ul>
            </div>

            <!-- Column 4: Connect (Replaces Visit Us) -->
            <div class="footer-contact">
                <h4>Get in Touch</h4>
                <p>We'd love to hear from you.</p>
                <p class="contact-item">
                    <a href={`mailto:${siteInfo.email}`}>{siteInfo.email}</a>
                </p>
                <p class="contact-item">
                    <a href={`tel:${siteInfo.phone}`}>{siteInfo.phone}</a>
                </p>
            </div>
        </div>
    </div>

    <div class="footer-bottom">
        <div class="container">
            <p>&copy; {currentYear} {siteInfo.name} All rights reserved.</p>
            {
                siteInfo.developer && (
                    <p class="developer-credit">
                        Built by{" "}
                        <a
                            href={siteInfo.developer.url}
                            target="_blank"
                            rel="noopener noreferrer"
                        >
                            {siteInfo.developer.name}
                        </a>
                    </p>
                )
            }
        </div>
    </div>
</footer>

<style>
    .site-footer {
        background-color: var(--color-primary);
        color: var(--color-background);
        margin-top: auto;
    }

    /* Newsletter Section */
    .newsletter-section {
        background-color: rgba(255, 255, 255, 0.03);
        padding: var(--spacing-lg) 0;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .newsletter-section h4 {
        color: var(--color-accent);
        font-family: var(--font-family-heading);
        font-size: var(--font-size-2xl);
        margin-bottom: var(--spacing-xs);
    }

    .newsletter-form {
        display: flex;
        gap: var(--spacing-xs);
        margin-top: var(--spacing-md);
        max-width: 400px;
        margin-left: auto;
        margin-right: auto;
    }

    .newsletter-form input {
        flex: 1;
        padding: 12px 16px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: var(--radius-sm);
        font-family: var(--font-family-body);
        background-color: transparent;
        color: white;
    }

    .newsletter-form input::placeholder {
        color: rgba(255, 255, 255, 0.5);
    }

    .newsletter-form button {
        background-color: var(--color-accent);
        color: var(--color-primary);
        padding: 12px 24px;
        font-weight: 600;
        border-radius: var(--radius-sm);
        transition: var(--transition);
        white-space: nowrap;
    }

    .newsletter-form button:hover {
        background-color: white;
    }

    /* Main Footer */
    .footer-main {
        padding: var(--spacing-xl) 0;
    }

    .footer-grid {
        display: grid;
        grid-template-columns: 1.5fr 0.8fr 0.8fr 1.2fr; /* Optimized columns */
        gap: var(--spacing-xl);
        text-align: left;
    }

    .footer-brand {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
    }

    .footer-logo {
        display: inline-block;
        margin-bottom: var(--spacing-sm);
    }

    .footer-logo-img {
        height: 5rem;
        width: auto;
        filter: brightness(0) invert(1);
    }

    .brand-description {
        font-family: var(--font-family-script);
        font-size: 1.1rem;
        opacity: 0.9;
        margin-bottom: var(--spacing-md);
        max-width: 250px;
    }

    .footer-links h4,
    .footer-contact h4 {
        color: var(--color-accent);
        margin-bottom: var(--spacing-md);
        font-family: var(--font-family-heading);
        font-size: var(--font-size-md);
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .footer-links ul {
        list-style: none;
        padding: 0;
    }

    .footer-links li {
        margin-bottom: var(--spacing-sm);
    }

    .footer-links a {
        color: rgba(255, 255, 255, 0.8);
        transition: color 0.3s ease;
    }

    .footer-links a:hover {
        color: var(--color-accent);
    }

    .contact-item {
        margin-bottom: var(--spacing-xs);
    }

    .contact-item a {
        color: rgba(255, 255, 255, 0.9);
        transition: color 0.3s ease;
    }
    .contact-item a:hover {
        color: var(--color-accent);
    }

    /* Social Links */
    .social-links {
        display: flex;
        gap: var(--spacing-md);
    }

    .social-icon {
        color: rgba(255, 255, 255, 0.8);
        transition:
            transform 0.2s ease,
            color 0.2s ease;
    }

    .social-icon:hover {
        color: var(--color-accent);
        transform: translateY(-2px);
    }

    .footer-bottom {
        background-color: rgba(0, 0, 0, 0.2);
        padding: var(--spacing-md) 0;
        text-align: center;
        font-size: var(--font-size-xs);
        color: rgba(255, 255, 255, 0.6);
        border-top: 1px solid rgba(255, 255, 255, 0.05);
    }

    .developer-credit {
        margin-top: 8px;
        font-size: 0.75rem;
    }

    .text-center {
        text-align: center;
    }

    /* Mobile Responsive */
    @media (max-width: 900px) {
        .footer-grid {
            grid-template-columns: 1fr 1fr;
            gap: var(--spacing-lg);
        }

        .footer-brand {
            grid-column: span 2;
            align-items: center;
            text-align: center;
        }

        .brand-description {
            text-align: center;
            margin-left: auto;
            margin-right: auto;
        }
    }

    @media (max-width: 600px) {
        .footer-grid {
            grid-template-columns: 1fr;
            text-align: center;
            gap: var(--spacing-xl);
        }

        .footer-brand {
            grid-column: span 1;
        }

        .newsletter-form {
            flex-direction: column;
            width: 100%;
        }

        .newsletter-form input,
        .newsletter-form button {
            width: 100%;
        }

        .footer-links,
        .footer-contact {
            align-items: center;
            display: flex;
            flex-direction: column;
        }
    }
</style>

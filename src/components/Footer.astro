---
import { siteInfo } from "../data/site";
import { Image } from "astro:assets";
import logo from "../assets/images/logo.svg";
const currentYear = new Date().getFullYear();
---

<footer class="site-footer">
    <!-- Newsletter Section - Centered Top -->
    <div class="newsletter-section section-padding">
        <div class="container text-center">
            <h4>Stay in Bloom</h4>
            <p>Subscribe for seasonal updates and floral inspiration.</p>
            <form class="newsletter-form" onsubmit="event.preventDefault();">
                <input
                    type="email"
                    placeholder="Your email address"
                    aria-label="Email Address"
                />
                <button type="submit">Subscribe</button>
            </form>
        </div>
    </div>

    <!-- Main Footer Content -->
    <div class="footer-main">
        <div class="container footer-grid">
            <!-- Column 1: Brand -->
            <div class="footer-brand">
                <a href="/" class="footer-logo">
                    <Image
                        src={logo}
                        alt={siteInfo.name}
                        class="footer-logo-img"
                    />
                </a>
                <p
                    style="font-family: 'Birthstone Bounce', cursive; font-size: 1.5rem;"
                >
                    {siteInfo.description}
                </p>
            </div>

            <!-- Column 2: Links -->
            <div class="footer-links">
                <h4>Quick Links</h4>
                <ul>
                    <li><a href="/about">Our Story</a></li>
                    <li><a href="/sourcing">Sourcing</a></li>
                    <li><a href="/services">Services</a></li>
                    <li><a href="/contact">Inquiries</a></li>
                    <li><a href="/privacy">Privacy Policy</a></li>
                    <li><a href="/terms">Terms of Service</a></li>
                </ul>
            </div>

            <!-- Column 3: Contact -->
            <div class="footer-contact">
                <h4>Visit Us</h4>
                <p>{siteInfo.address.display}</p>
                <p><a href={`mailto:${siteInfo.email}`}>{siteInfo.email}</a></p>
                <div class="social-links">
                    {/* Add social icons if needed later */}
                </div>
            </div>
        </div>
    </div>

    <div class="footer-bottom">
        <div class="container">
            <p>&copy; {currentYear} {siteInfo.name} All rights reserved.</p>
            {
                siteInfo.developer && (
                    <p class="developer-credit">
                        Built by{" "}
                        <a
                            href={siteInfo.developer.url}
                            target="_blank"
                            rel="noopener noreferrer"
                        >
                            {siteInfo.developer.name}
                        </a>
                    </p>
                )
            }
        </div>
    </div>
</footer>

<style>
    .site-footer {
        background-color: var(--color-primary);
        color: var(--color-background);
        padding-top: var(--spacing-lg);
        margin-top: auto; /* Pushes footer to bottom if content is short */
    }

    .site-footer {
        background-color: var(--color-primary);
        color: var(--color-background);
        margin-top: auto;
    }

    /* Newsletter Section */
    .newsletter-section {
        background-color: rgba(255, 255, 255, 0.05); /* Slight separation */
        padding: var(--spacing-lg) 0;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .newsletter-section h4 {
        color: var(--color-accent);
        font-family: var(--font-family-heading);
        font-size: var(--font-size-2xl);
        margin-bottom: var(--spacing-xs);
    }

    .newsletter-form {
        display: flex;
        gap: var(--spacing-xs);
        margin-top: var(--spacing-md);
        max-width: 500px;
        margin-left: auto;
        margin-right: auto;
    }

    .newsletter-form input {
        flex: 1;
        padding: 12px 16px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: var(--radius-sm);
        font-family: var(--font-family-body);
        background-color: transparent;
        color: white;
    }

    .newsletter-form input::placeholder {
        color: rgba(255, 255, 255, 0.5);
    }

    .newsletter-form button {
        background-color: var(--color-accent);
        color: var(--color-primary);
        padding: 12px 24px;
        font-weight: 600;
        border-radius: var(--radius-sm);
        transition: var(--transition);
        white-space: nowrap;
    }

    .newsletter-form button:hover {
        background-color: white;
    }

    /* Main Footer (Columns) */
    .footer-main {
        padding: var(--spacing-lg) 0;
    }

    .footer-grid {
        display: grid;
        grid-template-columns: 1.5fr 1fr 1fr; /* Wider column for brand/logo */
        gap: var(--spacing-xl);
        text-align: left; /* Default alignment */
    }

    .footer-logo {
        display: inline-block;
        margin-bottom: var(--spacing-sm);
    }

    .footer-logo-img {
        height: 6rem; /* Increased size (1.5x from 4rem) */
        width: auto;
        filter: brightness(0) invert(1); /* Make it white since footer is dark */
    }

    .footer-links h4,
    .footer-contact h4 {
        color: var(--color-accent);
        margin-bottom: var(--spacing-sm);
        font-family: var(--font-family-heading);
        font-size: var(--font-size-lg);
    }

    .footer-links ul {
        list-style: none;
        padding: 0;
    }

    .footer-links li {
        margin-bottom: var(--spacing-xs);
    }

    .footer-bottom {
        background-color: rgba(0, 0, 0, 0.2);
        padding: var(--spacing-sm) 0;
        text-align: center;
        font-size: var(--font-size-xs);
        color: rgba(255, 255, 255, 0.7);
    }

    .developer-credit {
        margin-top: 5px;
        opacity: 0.8;
    }

    .developer-credit a {
        color: inherit;
        text-decoration: underline;
    }

    .text-center {
        text-align: center;
    }

    /* Mobile Responsive */
    @media (max-width: 768px) {
        .footer-grid {
            grid-template-columns: 1fr;
            text-align: center;
            gap: var(--spacing-xl);
        }

        .newsletter-form {
            flex-direction: column;
        }

        .newsletter-form input,
        .newsletter-form button {
            width: 100%;
        }
    }
</style>
